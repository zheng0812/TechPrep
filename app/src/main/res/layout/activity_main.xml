<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.umn.d.umdcs4531.labsimpleandroidmvp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:text="Prev Odometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/odom_prev" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/textview_prevodom" />

        <TextView
            android:text="Current Odometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/odom_curr" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/textview_currodom" />

        <TextView
            android:text="Gallons Purchased"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gallons" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/textview_gallons" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/mpg" />
    </LinearLayout>

    <Button
        android:text="Calculate MPG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_calc_mpg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:onClick="onClickCalcMPG" />
</RelativeLayout>
